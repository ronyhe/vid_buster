{
    "name": "vid_buster",
    "version": "0.0.0",
    "description": "HLS video downloader",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf dist && rm -rf .parcel-cache",
        "rebuild": "npm run clean && npm run build",
        "build": "npx tsc --noEmit && npm run ensure-dirs && npx parcel build --no-optimize && npm run copy-files",
        "copy-files": "cp manifest.json dist/manifest.json && cp -R resources dist && cp -R html dist",
        "ensure-dirs": "mkdir -p dist/html && mkdir -p dist/resources",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "HLS"
    ],
    "author": "ronyhe",
    "license": "MIT",
    "devDependencies": {
        "chrome-types": "^0.1.246",
        "parcel": "^2.10.3",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3"
    },
    "targets": {
        "background": {
            "outputFormat": "global",
            "distDir": "dist/src/",
            "source": "src/background.ts"
        },
        "content": {
            "outputFormat": "global",
            "distDir": "dist/src/",
            "source": "src/content.ts"
        },
        "popup": {
            "outputFormat": "global",
            "distDir": "dist/src/",
            "source": "src/popup.ts"
        }
    }
}

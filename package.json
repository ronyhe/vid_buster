{
    "name": "vid_buster",
    "version": "0.0.0",
    "description": "HLS video downloader",
    "main": "index.js",
    "scripts": {
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "typecheck": "tsc",
        "check": "npm run lint && npm run typecheck && npm test",
        "build": "parcel build",
        "build:server": "parcel build --target server",
        "prod:start": "node dist/server.js",
        "dev:server": "npx tsx --watch src/server/server.ts",
        "dev:client": "parcel serve --target dev",
        "dev:open": "npm run dev:client -- --open",
        "clean": "rm -rf dist .parcel-cache",
        "rebuild": "npm run clean && npm run build",
        "test": "node --import tsx --test **/*.test.tsx",
        "postinstall": "jq '.exports.\"./build/spyMatchers\"=\"./build/spyMatchers.js\"' node_modules/expect/package.json | sponge node_modules/expect/package.json"
    },
    "keywords": [
        "HLS"
    ],
    "author": "ronyhe",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.10.4",
        "@types/react-dom": "^18.2.24",
        "chrome-types": "^0.1.246",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.35.0",
        "expect": "^29.7.0",
        "global-jsdom": "^24.0.0",
        "globals": "^15.9.0",
        "jsdom": "^24.1.3",
        "parcel": "^2.10.3",
        "parcel-reporter-static-files-copy": "^1.5.3",
        "prettier": "^3.1.1",
        "process": "^0.11.10",
        "tsx": "^4.19.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.3.0"
    },
    "targets": {
        "popup": {
            "outputFormat": "global",
            "distDir": "dist/extension/",
            "source": "src/popup.tsx"
        },
        "server": {
            "outputFormat": "commonjs",
            "distDir": "dist/",
            "source": "src/server/server.ts",
            "engines": {
                "node": ">= 20"
            }
        },
        "dev": {
            "outputFormat": "global",
            "distDir": "dist/dev/",
            "source": "dev/index.html"
        }
    },
    "dependencies": {
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.11.5",
        "@fontsource/roboto": "^5.0.12",
        "@mui/icons-material": "^5.15.15",
        "@mui/material": "^5.15.15",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "staticFiles": {
        "staticPath": "extension",
        "staticOutPath": "extension"
    }
}

{
    "manifest_version": 3,
    "name": "Vid Buster - Download HLS Videos",
    "description": "HLS Video Downloader",
    "version": "0.0.0",
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "html/default_popup.html",
        "default_icon": "resources/default_icon.png"
    },
    "permissions": ["activeTab", "tabs"],
    "content_scripts": [
        {
            "js": ["src/content.js"],
            "matches": ["http://*/", "https://*/", "file://*/"],
            "run_at": "document_end"
        }
    ]
}
